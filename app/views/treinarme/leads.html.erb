<% @header_title = "Leads" %>

<!-- Extra Header -->
<div class="extraHeader not-fixed">
  <form class="search-form" action="<%= leads_path %>" method="get">
    <div class="form-group searchbox">
        <input type="text" id="q" name="q" class="form-control search rounded" placeholder="Buscar..." value="<%= params[:q] %>">
        <i class="input-icon">
          <ion-icon name="search-outline"></ion-icon>
        </i>
      </div>
    </div>
  </form>
</div>
<!-- * Extra Header -->


<!-- App Capsule -->
<div id="appCapsule" class="not-fixed mt-2 mb-2">

  <%= column_chart leads_per_day_path, width: "100%", height: "200px" %>

  <div class="section full mt-2">
    <div class="listview-title text-primary">
      Total hoje: <%= @totais %> leads
    </div>
  </div>
  <ul class="listview link-listview">
    <% @leads.each do |lead| %>
      <li>
        <a href="<%= lead_path(lead) %>">
          <span class="text-dark"><%= lead.name %></span>
          <span class="text-muted"><%= date_to_str lead.created_at %></span>
        </a>
      </li>
    <% end %>
  </ul>

</div>
<!-- * App Capsule -->


<!-- App Bottom Menu -->
<div class="appBottomMenu">
  <a href="<%= root_path %>" class="item">
    <div class="col">
      <ion-icon name="bar-chart-outline"></ion-icon>
      <strong>Resumo</strong>
    </div>
  </a>
  <a href="<%= faturamento_path %>" class="item">
    <div class="col">
      <ion-icon name="calendar-outline"></ion-icon>
      <strong>Hoje</strong>
    </div>
  </a>
  <a href="<%= operacao_path %>" class="item active">
    <div class="col">
      <ion-icon name="hammer-outline"></ion-icon>
      <strong>Operação</strong>
    </div>
  </a>
  <a href="<%= relatorios_path %>" class="item">
    <div class="col">
      <ion-icon name="bulb-outline"></ion-icon>
      <strong>Relatórios</strong>
    </div>
  </a>
</div>
<!-- * App Bottom Menu -->
