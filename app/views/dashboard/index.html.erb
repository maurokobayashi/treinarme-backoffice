<% @header_hide_voltar = true %>

<!-- App Capsule -->
<div id="appCapsule" class="not-fixed mb-2">

  <div class="header-large-title mt-3">
    <div class="text-muted"><%= date_to_str(Time.now) %></div>
    <h1 class="title">Resumo</h1>
    <!-- <h4 class="subtitle">Resolveu trabalhar é? Então bora!</h4> -->
  </div>

  <div class="section mt-3">
    <div class="row">
      <div class="col-6">
        <a href="contatos.html">
          <div class="card product-card">
            <div class="card-body">
              <p class="text-secondary mb-0">Saldo disponível</p>
              <h2 class="title mt-2">
                <span class="text-muted">R$</span>
                <%= from_cents @saldo.current.first.amount %>
              </h2>
            </div>
          </div>
        </a>
      </div>
      <div class="col-6">
        <a href="contatos.html">
          <div class="card product-card">
            <div class="card-body">
              <p class="text-secondary mb-0">Saldo futuro</p>
              <h2 class="title mt-2">
                <span class="text-muted">R$</span>
                <%= from_cents @saldo.future.first.amount %>
              </h2>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>

  <!-- Avisos -->
  <div class="section mt-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Faturamento</h5>
        <%= area_chart faturamento_por_dia_path, width: "100%", curve: false %>
      </div>
    </div>
  </div>

  <!-- Ultimos contatos -->
  <div class="section full mt-4">
    <div class="section-title">Hoje</div>
  </div>
  <div class="section">
    <div class="card">
      <ul class="listview flush transparent image-listview text">
        <li>
          <a href="<%= leads_path %>" class="item">
            <div class="in">
              Leads únicos
              <span class="text-primary"><%= @leads_unicos_count %></span>
            </div>
          </a>
        </li>
        <li>
          <a href="<%= leads_path %>" class="item">
            <div class="in">
              Leads total
              <span class="text-primary"><%= @leads_count %></span>
            </div>
          </a>
        </li>
        <li>
          <a href="<%= cancelamentos_path %>" class="item">
            <div class="in">
              Cancelamentos
              <span class="text-primary"><%= @cancelamentos_count %></span>
            </div>
          </a>
        </li>
      </ul>
    </div>
  </div>

</div>
<!-- * App Capsule -->


<!-- App Bottom Menu -->
<div class="appBottomMenu">
  <a href="<%= root_path %>" class="item active">
    <div class="col">
      <ion-icon name="bar-chart-outline"></ion-icon>
      <strong>Resumo</strong>
    </div>
  </a>
  <a href="<%= faturamento_path %>" class="item">
    <div class="col">
      <ion-icon name="calendar-outline"></ion-icon>
      <strong>Hoje</strong>
    </div>
  </a>
  <a href="<%= operacao_path %>" class="item">
    <div class="col">
      <ion-icon name="hammer-outline"></ion-icon>
      <strong>Operação</strong>
    </div>
  </a>
  <a href="<%= relatorios_path %>" class="item">
    <div class="col">
      <ion-icon name="bulb-outline"></ion-icon>
      <strong>Relatórios</strong>
    </div>
  </a>
</div>
<!-- * App Bottom Menu -->
