<h1>Pedidos</h1>

<h3><%= @totais[:count] %> pedidos totalizando R$ <%= from_cents @totais[:amount] %></h3>

<form action="<%= pedidos_path %>" method="get">
  <input type="text" id="q" name="q" value="<%= params[:q] %>">
  <input type="submit" value="Buscar">
</form>

<br>

<table>
  <thead style="text-align:left;">
    <tr>
      <th>pagador</th>
      <th>status</th>
      <th>criado em</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido[:customer][:fullname] %></td>
        <% color = pedido[:status] == "NOT_PAID" ? "red" : "green" %>
        <td style="color: <%= color %>;"><%= pedido[:status] %></td>
        <td><%= date_from_moip_v2 pedido[:created_at] %></td>
        <td><%= link_to "Detalhes", pedido_path(pedido[:id]) %></td>
        <% if pedido[:status] == "NOT_PAID" %>
          <% personal = Personal.find_by_email pedido[:customer][:email] %>
          <% if personal.present? && personal.active? %>
            <td><%= link_to "Inativar", "https://www.treinar.me/malandro/personals/#{personal.id}/edit", target: "_blank" %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<a href="javascript:window.history.back();">Voltar</a>