<%
  @header_title = "Relatórios"
  @bottom_menu_active = "relatorios"
%>

<!-- App Capsule -->
<div id="appCapsule" class="not-fixed mt-2 mb-2">

  <div class="section full mt-2">
    <div class="section-title">
      Nuvem de palavras
      <div class="font-12">
        <a href="#" class="dropdown-toggle text-secondary" data-bs-toggle="dropdown">
          últimos <%= params[:qtd_leads].present? ? "#{params[:qtd_leads]}" : "1000" %> contatos
        </a>
        <div class="dropdown-menu dropdown-menu-right font-14">
          <a href="<%= relatorios_palavras_path qtd_leads: 2000 %>" class="dropdown-item">
            2000 contatos
          </a>
          <a href="<%= relatorios_palavras_path qtd_leads: 1000 %>" class="dropdown-item">
            1000 contatos
          </a>
          <a href="<%= relatorios_palavras_path qtd_leads: 500 %>" class="dropdown-item">
            500 contatos
          </a>
        </div>
      </div>
    </div>

    <ul class="listview simple-listview">
      <% @word_cloud.each do |word, count| %>
      <li>
        <span class="text-secondary"><%= word %></span>
        <span class="text-dark"><%= count %></span>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<!-- * App Capsule -->

